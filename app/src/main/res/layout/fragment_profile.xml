<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:padding="16dp">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spacing="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/adn_black"
            android:paddingBottom="32dp"
            android:paddingStart="4dp"/>

        <!-- Nombre -->
        <include
            android:id="@+id/blockName"
            layout="@layout/item_profile_field" />

        <!-- GÃ©nero -->
        <include
            android:id="@+id/blockGender"
            layout="@layout/item_profile_field" />

        <!-- Edad -->
        <include
            android:id="@+id/blockAge"
            layout="@layout/item_profile_field" />

        <!-- Peso -->
        <include
            android:id="@+id/blockWeight"
            layout="@layout/item_profile_field" />

        <!-- Altura -->
        <include
            android:id="@+id/blockHeight"
            layout="@layout/item_profile_field" />

        <!-- Dieta -->
        <include
            android:id="@+id/blockDiet"
            layout="@layout/item_profile_field" />

    </LinearLayout>
</ScrollView>
