<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal -->
    <style name="Theme.ADNApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/olive</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/adn_dark_green</item>
        <item name="colorSecondaryVariant">@color/adn_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema para splash screen -->
    <style name="Theme.ADNApp.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/adn_light_green</item>
        <item name="android:statusBarColor">#C8E6C9</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


</resources>
