<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.adnapp">

    <!--Permisos-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/adn_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/adn_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ADNApp"
        tools:targetApi="31">

        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.ADNApp" />

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ADNApp" />

        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.ADNApp" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ADNApp" />

        <activity
            android:name=".DataRegistrationActivity"
            android:exported="true"
            android:theme="@style/Theme.ADNApp" />

        <!-- Si tienes SplashActivity y quieres mantenerla -->

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ADNApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
